<div class="list-group-item" id="<%= dom_id(item) %>" data-turbo-refresh-animate>
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-2">
      <%= form_with(model: [item.list, item], class: "d-flex align-items-center") do |form| %>
        <div class="form-check mb-0">
          <%= form.check_box :completed, class: "form-check-input", onchange: "this.form.requestSubmit()" %>
        </div>
      <% end %>
      <span class="<%= 'text-decoration-line-through text-muted' if item.completed? %>">
        <%= item.content %>
      </span>
    </div>
    <%= button_to "Delete", [item.list, item], method: :delete, class: "btn btn-outline-danger btn-sm" %>
  </div>
  <details class="mt-2">
    <summary class="text-muted small text-end">Edit</summary>
    <div class="mt-3">
      <%= render "items/form", item: item %>
    </div>
  </details>
</div>
