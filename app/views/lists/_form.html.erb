<%= form_with(model: list) do |form| %>
  <div class="mb-2">
    <%= form.text_field :title, class: "form-control #{'is-invalid' if list.errors[:title].any?}", placeholder: "New list title..." %>
    <% if list.errors[:title].any? %>
      <div class="invalid-feedback d-block"><%= list.errors[:title].first %></div>
    <% end %>
  </div>
  <%= form.submit class: "btn btn-primary w-100" %>
<% end %>
