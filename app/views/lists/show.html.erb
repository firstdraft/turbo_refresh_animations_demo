<% content_for :title, @list.title %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= @list.title %></li>
        </ol>
      </nav>

      <div class="card">
        <div class="card-header">
          <div><%= @list.title %></div>
          <details>
            <summary class="text-muted small">Manage</summary>
            <div class="mt-3">
              <%= render "form", list: @list %>
            </div>
            <div class="mt-2">
              <%= button_to "Delete list", @list, method: :delete, class: "btn btn-outline-danger w-100" %>
            </div>
          </details>
        </div>
        <div class="list-group list-group-flush">
          <% @list.items.order(:created_at).each do |item| %>
            <%= render item %>
          <% end %>
          <div class="list-group-item">
            <%= render "items/form", item: @item %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
