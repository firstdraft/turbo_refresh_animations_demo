<% content_for :title, @list.title %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= @list.title %></li>
        </ol>
      </nav>

      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <span><%= @list.title %></span>
            <%= button_to "Delete", @list, method: :delete, class: "btn btn-outline-danger btn-sm", data: { turbo_confirm: "Delete this list and all its items?" } %>
          </div>
          <details class="mt-2">
            <summary class="text-muted small text-end">Edit</summary>
            <div class="mt-3">
              <%= render "form", list: @list %>
            </div>
          </details>
        </div>
        <div class="list-group list-group-flush">
          <% @list.items.order(:created_at).each do |item| %>
            <%= render item %>
          <% end %>
          <div class="list-group-item">
            <%= render "items/form", item: @item %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
